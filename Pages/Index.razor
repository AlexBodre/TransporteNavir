<section class="safety">
    <div class="container">
        <h2 class="section-title">Nuestros Compromisos</h2>
        <div class="services-grid">
            <div class="service-card">
                <h3><i class="fas fa-shield-alt"></i> Seguridad</h3>
                <p>Vehículos equipados con los más altos estándares de seguridad y conductores certificados.</p>
            </div>
            <div class="service-card">
                <h3><i class="fas fa-clock"></i> Puntualidad</h3>
                <p>Cumplimiento estricto de horarios para garantizar la confiabilidad de nuestros servicios.</p>
            </div>
            <div class="service-card">
                <h3><i class="fas fa-heart"></i> Comodidad</h3>
                <p>Unidades diseñadas para brindar la mejor experiencia durante el viaje.</p>
            </div>
        </div>
    </div>
</section>

<section class="contact" id="contact">
    <div class="container">
        <h2 class="section-title">Solicitar Cotización</h2>
        <div style="max-width: 600px; margin: 0 auto;">
            <EditForm Model="@contactForm" OnValidSubmit="@HandleSubmit">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <InputText id="name" @bind-Value="contactForm.Name" class="form-control" />
                    <ValidationMessage For="@(() => contactForm.Name)" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <InputText id="email" @bind-Value="contactForm.Email" class="form-control" />
                    <ValidationMessage For="@(() => contactForm.Email)" />
                </div>
                <div class="form-group">
                    <label for="phone">Teléfono</label>
                    <InputText id="phone" @bind-Value="contactForm.Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="service">Servicio de Interés</label>
                    <InputSelect id="service" @bind-Value="contactForm.Service" class="form-control">
                        <option value="">Seleccione un servicio</option>
                        <option value="escolar">Transporte Escolar</option>
                        <option value="turístico">Transporte Turístico</option>
                        <option value="empleados">Transporte de Empleados</option>
                    </InputSelect>
                </div>
                <div class="form-group">
                    <label for="message">Mensaje</label>
                    <InputTextArea id="message" @bind-Value="contactForm.Message" class="form-control" rows="5" />
                </div>
                <button type="submit" class="btn">Enviar Solicitud</button>
            </EditForm>
        </div>
    </div>
</section>

<footer>
    <div class="container">
        <div class="logo" style="margin-bottom:1rem;">
            <span class="logo-top">TRANSPORTE</span>
            <span class="logo-bottom">NAVIR</span>
        </div>
        <p>© @DateTime.Now.Year Transporte Navir. Todos los derechos reservados.</p>
        <p><i class="fas fa-phone"></i> +1 234 567 8900 | <i class="fas fa-envelope"></i> info@transportenavir.com</p>
        <p><i class="fas fa-map-marker-alt"></i> Av. Logística 1234, Zona Industrial, Ciudad</p>
    </div>
</footer>

@code {
    private ContactForm contactForm = new ContactForm();

    private async Task HandleSubmit()
    {
        if (contactForm.IsValid())
        {
            // Aquí puedes agregar la lógica para enviar el formulario, como una API o un servicio de correo.
            await Task.Delay(500); // Simulación de envío
            contactForm = new ContactForm(); // Resetea el formulario después del envío
        }
    }

    public class ContactForm
    {
        [Required(ErrorMessage = "El nombre es obligatorio.")]
        public string Name { get; set; }

        [Required(ErrorMessage = "El email es obligatorio.")]
        [EmailAddress(ErrorMessage = "El email no es válido.")]
        public string Email { get; set; }

        public string Phone { get; set; }

        public string Service { get; set; }

        [Required(ErrorMessage = "El mensaje es obligatorio.")]
        public string Message { get; set; }

        public bool IsValid() => !string.IsNullOrEmpty(Name) && !string.IsNullOrEmpty(Email) && !string.IsNullOrEmpty(Message);
    }
}